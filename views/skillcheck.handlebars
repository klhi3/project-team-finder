<h1 class="m-4">Check how proficient a user is with a skill!</h1>
<div class="container m-3">
    <input class="form-control form-control-lg mb-2" id="github" type="text" placeholder="Github" aria-label=".form-control-lg example">
    <input class="form-control form-control-lg mb-2" id="skill" type="text" placeholder="Skill" aria-label="default input example">
    <button class="btn btn-success btn-block mb-2" id="check-skill">Check Proficiency!</button>
    <div class="card" style="width: 24rem;">
        <div class="card-body">
        <h5 class="card-title" id="skill-user">Name</h5>
        <p class="card-text" id="skill-name">Which skill</p>
        <p class="card-text" id="skill-proficiency">Description, proficiency, stuff</p>
        <p class="card-text" id="skill-detail">Details</p>
        </div>
    </div>
</div>
<!-- get script to handle pulling api data -->
<script src="/js/github.js"></script>